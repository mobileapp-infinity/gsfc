<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">

    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
        android:id="@+id/child_item_1"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:text="Name"
        android:textStyle="bold"
        android:background="@drawable/director_collage_display_child_bg"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textSize="12dp" />
    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
        android:id="@+id/child_item_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:layout_margin="2dp"
        android:background="@drawable/director_collage_display_child_bg"
        android:text="Designation"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textSize="12dp" />
    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
        android:id="@+id/child_item_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:text="department"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:background="@drawable/director_collage_display_child_bg"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textSize="12dp"/>
    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
        android:id="@+id/child_item_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:layout_margin="2dp"
        android:text="number"
        android:background="@drawable/director_collage_display_child_bg"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textSize="12dp"/>

</LinearLayout>