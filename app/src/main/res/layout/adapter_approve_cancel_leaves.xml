<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/add_leave_border"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_main_approve_headder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/miss_punch_bg"
        android:padding="7dp"
        android:weightSum="3">


        <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
            android:id="@+id/txt_enroll_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Approve Leaves"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
            android:id="@+id/txt_sr_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center|right"
            android:padding="5dp"
            android:text="Pending/Approve"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />



        <Switch
            android:id="@+id/cb_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight=".5"
            android:checked="true"
            android:gravity="left|center"
            android:padding="5dp"
            android:theme="@style/CustomAppTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/ll_main_heder"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
                android:layout_width="0dp"
                android:text="Employee \nName"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
                android:layout_width="0dp"
                android:text="Leave Status"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size"
                android:text="From Date"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size"
                android:text="To Date"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:id="@+id/ll_pending"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:text="ABCD"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:text="Pending"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size"
                android:text="01/08/2018 \n(09:00 AM)"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size"
                android:text="01/08/2018 \n(09:00 AM)"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp"
            android:id="@+id/ll_approve"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:text="XYZ"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:text="Approved"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size"
                android:text="01/08/2018 \n(09:00 AM)"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size"
                android:text="01/08/2018 \n(09:00 AM)"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>