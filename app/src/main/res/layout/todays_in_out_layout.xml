<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_cat_main"
    android:gravity="center_horizontal"

    android:padding="10dp">

    <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
        android:id="@+id/tv_titile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:paddingLeft="8dp"
        android:text=""
        android:background="@color/colorPrimary1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_below="@+id/tv_titile"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Today's InTime  :-"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView>
            <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tv_todays_in"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            android:layout_height="wrap_content">
            <com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:text="Today's OutTime  :-"
                android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomBoldTextView> <com.infinity.infoway.gsfc.CommonCls.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center|left"
            android:layout_gravity="left|center"
            android:id="@+id/tv_todays_out"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>