<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yello"
    android:orientation="vertical">



    <LinearLayout

        android:id="@+id/ll_fill_att"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/footer_agree"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@color/green">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Announcement"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_method2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/method2"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:visibility="visible">

                    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Announcement For Student"
                        android:id="@+id/tv_title_ann"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_u" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right|center"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/iv_down_arrow_method2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center"
                            android:src="@drawable/ar_down" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/lll_lv"
                    android:layout_height="wrap_content">

                    <com.infinity.infoway.gsfc.activity.ExpandableHeightListView
                        android:id="@+id/lv_announcement_stud"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.infinity.infoway.gsfc.activity.ExpandableHeightListView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ll_no_records"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <com.infinity.infoway.gsfc.CommonCls.CustomTextView
                        android:id="@+id/tv_no_records"
                        android:text="No Records Found"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.infinity.infoway.gsfc.CommonCls.CustomTextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>