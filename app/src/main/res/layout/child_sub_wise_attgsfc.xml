<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:layout_marginLeft="5dp"
    android:layout_margin="10dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/fees"
        android:gravity="top"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lblListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Lecture"
            android:gravity="right"
            android:layout_gravity="top"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_weight="0.50" />

        <TextView
            android:id="@+id/tvseparater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :- "
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_total_lect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.50"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/fees"
        android:gravity="top"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remaining Lecture"
            android:gravity="right"
            android:layout_gravity="top"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_weight="0.50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :- "
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_remaining_lect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.50"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/fees"
        android:gravity="top"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Present In Lecture"
            android:gravity="right"
            android:layout_gravity="top"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_weight="0.50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :- "
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_prs_in_lect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.50"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/fees"
        android:gravity="top"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance in(%)"
            android:gravity="right"
            android:layout_gravity="top"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_weight="0.50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :- "
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_att_in_per"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.50"/>

    </LinearLayout>
</LinearLayout>